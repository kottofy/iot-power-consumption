{
  "loaders": [
    {
      "type": "node",
      "name": "node"
    }
  ],
  "modules": [
    {
      "name": "node_printer",
      "loader": {
        "name": "node",
        "entrypoint": {
          "main.path": "devices/printer.js"
        }
      },
      "args": null
    },
    {
      "name": "node_sensor",
      "loader": {
        "name": "node",
        "entrypoint": {
          "main.path": "devices/fridge.js"
        }
      },
      "args": {
        "sensorName": "fridgeA",
        "macAddress": "01:01:01:01:01:01",
        "dataSetPath": "data/FridgeDataSequences/FridgeA-meter4_2016.csv"
      }
    }
  ],
  "links": [
    {
      "source": "node_sensor",
      "sink": "node_printer"
    }
  ]
}